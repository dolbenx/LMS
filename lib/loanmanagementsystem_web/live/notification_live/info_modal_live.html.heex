<div id={"modal-#{@id}"}>
    <div class="custom-modal-container" phx-hook="ScrollLock" id={"modals-#{@id}"}>
        <div class="custom-modal-inner-container">
            <div class="custom-modal-card">
                <div class="custom-modal-inner-card">
                    <!-- Title -->
                    <%= if @title != nil do %>
                    <div class="custom-modal-error-title">
                        <%= @title %>
                    </div>
                    <% end %>

                    <!-- Body -->
                    <%= if @body != nil do %>
                    <div class="custom-modal-body">
                        <h4><%= @body %></h4>
                    </div>
                    <% end %>

                    <!-- Buttons -->
                    <div class="custom-modal-buttons">
                        <!-- Left Button -->
                        <button class="btn btn-secondary"
                                type="button"
                                phx-click="left-button-click"
                                phx-target={"#modal-#{@id}"}>
                            <div>
                                <%= @left_button %>
                            </div>
                        </button>
                        <div style="margin: 2px"></div>
                        <!-- Right Button -->
                        <button class="btn btn-success"
                                type="button"
                                phx-click="right-button-click"
                                phx-target={"#modal-#{@id}"}>
                            <div>
                                <%= @right_button %>
                            </div>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
