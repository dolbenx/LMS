<%# ---------------------------------------- Edit District------------------------------------------------------- %>

<div class="modal fade" id="edit_branch" >
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content modal-content-demo">
            <div class="modal-header">
                <h6 class="modal-title">Edit Branch</h6>

            </div>
            <form action=" <%= Routes.organization_management_path(@conn, :admin_qfin_update_branch) %> " method="post">
            <div class="modal-body">
            <input type="hidden" name="_csrf_token" value="<%= Plug.CSRFProtection.get_csrf_token()%>">
                    <input type="hidden" name="id" id="id">
                <div class="row row-lg">
                    <div class="col-sm-12 col-md-12 col-lg-12">
                        <div class="row row-sm">
                            <div class="col-sm">
                            <label class="form-label">Branch Name<span style="color: red;">*</span></label>
                                <input class="form-control" id="branchname"name="branchName"  type="text">
                            </div>

                             <div class="col-sm">
                            <label class="form-label">Branch Code<span style="color: red;">*</span></label>
                                <input class="form-control" id="branchcode"name="branchCode"  type="text">
                            </div>
                             <div class="col-sm">
                                <label class="form-label">Is this branch Default for USSD<span style="color: red;">*</span></label>
                                <select required id="isdefaultussdbranch" name="isDefaultUSSDBranch" class="form-control">
                                     <option label="Select Your Answer"></option>
                                     <option value="0">No</option>
                                     <option value="1">Yes</option>

                                </select>
                            </div>

                        </div>
                        <div class="row row-sm">
                            <div class="col-sm">
                            <label class="form-label">Branch Address<span style="color: red;">*</span></label>
                                <input class="form-control" id="branchaddress" name="branchAddress"  type="text">
                            </div>


                            <div class="col-sm-4">
                                <label class="form-label">Select City<span style="color: red;">*</span></label>
                                <select required id="city" name="city" class="form-control">
                                     <option label="Select Your City"></option>
                                    <%= for district <- @districts do %>
                                     <option value="<%= district.name %>"><%= district.name %></option>
                                    <% end %>

                                </select>
                            </div>
                            <div class="col-sm-4">
                                <label class="form-label">Select Province<span style="color: red;">*</span></label>
                                <select required id="province" name="province" class="form-control">
                                     <option label="Select Your Province"></option>
                                    <%= for province <- @provinces do %>
                                     <option value="<%= province.name %>"><%= province.name %></option>
                                    <% end %>

                                </select>
                            </div>

                        </div>


                    </div>
                    </div>
            </div>
            <div class="modal-footer">
                <button class="btn ripple btn-success" type="submit">Update Branch</button>
                <button class="btn ripple btn-danger" data-bs-dismiss="modal" type="button">Close</button>
            </div>
        </form>
        </div>
    </div>
</div>






<script>
$(document).ready(function(){
//view Charge details
    $('#view_branch').on('show.bs.modal', function (event){
            var button = $(event.relatedTarget)
            var id = button.data('id')
            var branchname = button.data('branchname')
            var branchcode = button.data('branchcode')
            var isdefaultussdbranch = button.data('isdefaultussdbranch')

            var modal = $(this)
            modal.find('.modal-body #id').val(id);
            modal.find('.modal-body #branchname').val(branchname);
            modal.find('.modal-body #branchcode').val(branchcode);
            modal.find('.modal-body #isdefaultussdbranch').val(isdefaultussdbranch);
    });
    $('#edit_branch').on('show.bs.modal', function (event){
            var button = $(event.relatedTarget)
            var id = button.data('id')
            var branchname = button.data('branchname')
            var branchcode = button.data('branchcode')

            var city = button.data('city')
            var province = button.data('province')
            var branchaddress = button.data('branchaddress')


            var modal = $(this)
            modal.find('.modal-body #id').val(id);
            modal.find('.modal-body #branchname').val(branchname);
            modal.find('.modal-body #branchcode').val(branchcode);

            modal.find('.modal-body #city').val(city);
            modal.find('.modal-body #province').val(province);
            modal.find('.modal-body #branchaddress').val(branchaddress);

         $('#isdefaultussdbranch').val(button.data('isdefaultussdbranch')).trigger("change")


    });
});
</script>
