
<div id="kt_header" class="header header-fixed">
    <!--begin::Container-->
    <div class="container-fluid d-flex align-items-stretch justify-content-between">
        <!--begin::Header Menu Wrapper-->
            <%= render LoanmanagementsystemWeb.OrganizationManagementView, "submenu.html", assigns %>
        <!--end::Header Menu Wrapper-->
    </div>
    <!--end::Container-->
</div>
<!--end::Header-->
<%= render LoanmanagementsystemWeb.UserView, "aleart.html", assigns %>
<!--begin::Content-->
<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Subheader-->
    <div class="subheader py-2 py-lg-4 subheader-solid" id="kt_subheader">
        <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <!--begin::Info-->
            <div class="d-flex align-items-center flex-wrap mr-2">
                <!--begin::Page Title-->
                <h5 class="text-dark font-weight-bold mt-2 mb-2 mr-5">Working Days Maintainence</h5>
                <!--end::Page Title-->
                <!--begin::Actions-->
                <div class="subheader-separator subheader-separator-ver mt-2 mb-2 mr-4 bg-gray-200"></div>
                <!--end::Actions-->
            </div>
            <!--end::Info-->
            <!--begin::Toolbar-->
            <div class="d-flex align-items-center">
                <!--begin::Daterange-->
                TIME
            </div>
            <!--end::Toolbar-->
        </div>
    </div>
    <!--end::Subheader-->
    <!--begin::Entry-->
    <div class="d-flex flex-column-fluid">
        <!--begin::Container-->
        <div class="container-fluid">
            <!--begin::Dashboard-->
            <!--begin::Row-->
            <div class="row">
                <div class="col-md-12 col-xxl-12">
                    <div class="card card-custom card-stretch gutter-b">
                        <div class="card-header flex-wrap border-0 pt-6 pb-0">
                            <div class="card-title">
                                <h3 class="card-label">Working Days List
                                <span class="text-muted pt-2 font-size-sm d-block">List of working days</span></h3>
                            </div>
                            <div class="card-toolbar">
                                <button type="button" class="btn ripple text-white font-weight-bolder" data-toggle="modal" data-target="#addworkingdaysmodal" style="background-color: #011941;">
                                    Add Working Days
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered table-hover table-striped w-100" id="kt_datatable">
                            <input type="hidden" name="_csrf_token" id="csrf" value="<%= Plug.CSRFProtection.get_csrf_token()%>">
                                <thead>
                                    <tr>
                                        <th>Monday</th>
                                        <th>Tuesday</th>
                                        <th>Wednesday</th>
                                        <th>Thursday</th>
                                        <th>Friday</th>
                                        <th>Saturday</th>
                                        <th>Sunday</th>
                                        <th class="text-center">Action</th>

                                    </tr>
                                </thead>

                                    <tr>
                                        <td><%= @workingdays && @workingdays.monday %> </td>
                                        <td><%=  @workingdays && @workingdays.tuesday %> </td>
                                        <td> <%=  @workingdays && @workingdays.wednesday  %> </td>
                                        <td> <%=  @workingdays && @workingdays.thursday  %> </td>
                                        <td> <%=  @workingdays && @workingdays.friday  %> </td>
                                        <td> <%=  @workingdays && @workingdays.saturday  %> </td>
                                        <td> <%=  @workingdays && @workingdays.sunday  %> </td>
                                        <td>

                                            <div class="dropdown">
                                                <button class="dropbtn">Options</button>
                                                <div class="dropdown-content">
                                                    <a class="btn ripple btn-sm" href="#"
                                                        data-target="#updateworkingdaysmodal"
                                                        data-toggle="modal"
                                                        data-id ="<%=  @workingdays && @workingdays.id %>"
                                                        data-monday ="<%=   @workingdays && @workingdays.monday %>"
                                                        data-tuesday ="<%=   @workingdays && @workingdays.tuesday %>"
                                                        data-wednesday ="<%=   @workingdays && @workingdays.wednesday %>"
                                                        data-thursday ="<%=   @workingdays && @workingdays.thursday %>"
                                                        data-friday ="<%=   @workingdays && @workingdays.friday %>"
                                                        data-saturday ="<%=   @workingdays && @workingdays.saturday %>"
                                                        data-sunday ="<%=   @workingdays && @workingdays.sunday %>"
                                                    >Edit</a>

                                                    <a class="btn ripple btn-sm" href="#"
                                                        data-target="#viewholidaymodal"
                                                        data-toggle="modal"
                                                        data-id ="<%=  @workingdays && @workingdays.id %>"
                                                        data-monday ="<%=   @workingdays && @workingdays.monday %>"
                                                        data-tuesday ="<%=   @workingdays && @workingdays.tuesday %>"
                                                        data-wednesday ="<%=   @workingdays && @workingdays.wednesday %>"
                                                        data-thursday ="<%=   @workingdays && @workingdays.thursday %>"
                                                        data-friday ="<%=   @workingdays && @workingdays.friday %>"
                                                        data-saturday ="<%=   @workingdays && @workingdays.saturday %>"
                                                        data-sunday ="<%=   @workingdays && @workingdays.sunday %>"
                                                    >View</a>
                                                </div>
                                            </div>
                                        </a>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!--end::Row-->
        </div>
        <!--end::Container-->
    </div>
    <!--end::Entry-->
</div>

    <!-- Tooltips and Popovers -->

<div class="modal" id="addworkingdaysmodal">
    <div class="modal-dialog modal-fullscreen" role="document">
        <div class="modal-content modal-content-demo">
            <div class="modal-header">
                <h6 class="modal-title">Add Working Days</h6>
            </div>
            <form action="<%= Routes.change_management_path(@conn, :create_working_days)%>" method="POST">
                <input type="hidden" name="_csrf_token" id="csrf" value="<%= Plug.CSRFProtection.get_csrf_token()%>">
                <div class="modal-body">
                    <div class="row row-sm">
                        <div class="col-md-4">
                            <div class="form-group row justify-content-end">
                                <div class="col-md-8 ps-md-2">
                                    <div class="form-group mb-0">
                                        <label>
                                            <span class="tx-13">Working Days:</span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row row-sm">
                        <div class="col-md-6">
                                <div class="col-md">
                                    <div class="col-lg-3 mg-t-20 mg-lg-t-0">
                                        <label class="ckbox" >
                                            <input name="monday" value="Yes" type="checkbox">
                                            <span></span>
                                            Monday
                                        </label>
                                    </div>
                                </div>

                                <div class="col-md">
                                    <div class="col-lg-3 mg-t-20 mg-lg-t-0">
                                        <label class="ckbox"><input name="tuesday" value="Yes" type="checkbox">  <span><label> Tuesday </label></span></label>
                                    </div>
                                </div>
                                <div class="col-md">
                                    <div class="col-lg-3 mg-t-20 mg-lg-t-0">
                                        <label class="ckbox"><input name="wednesday" value="Yes" type="checkbox"> <span><label>Wednesday</label></span></label>
                                    </div>
                                </div>
                                <div class="col-md">
                                    <div class="col-lg-3 mg-t-20 mg-lg-t-0">
                                        <label class="ckbox"><input name="thursday" value="Yes" type="checkbox"> <span><label> Thursday </label></span></label>
                                    </div>
                                </div>
                                <div class="col-md">
                                    <div class="col-lg-3 mg-t-20 mg-lg-t-0">
                                        <label class="ckbox"><input name="friday" value="Yes" type="checkbox"> <span><label> Friday </label></span></label>
                                    </div>
                                </div>
                                <div class="col-md">
                                    <div class="col-lg-3 mg-t-20 mg-lg-t-0">
                                        <label class="ckbox"><input name="saturday" value="Yes" type="checkbox"> <span><label> Saturday </label></span></label>
                                    </div>
                                </div>
                                <div class="col-md">
                                    <div class="col-lg-3 mg-t-20 mg-lg-t-0">
                                        <label class="ckbox"><input name="sunday" value="Yes" type="checkbox"> <span><label> Sunday</label></span></label>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="row row-sm">
                        <div class="col-md-4">
                            <div class="form-group row justify-content-end">
                                <div class="col-md-8 ps-md-2">
                                    <div class="form-group mb-0">
                                        <label>
                                            <span class="tx-13">Payments Due on Non-working days</span>
                                        </label>

                                        <label>
                                            <span class="tx-13">Extend the term for loans following a daily repayment schedule</span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group col-sm">
                                <label class="ckbox">
                                    <input type="checkbox" name="payment_on_non_working_days"><span class="tx-13"></span>
                                </label>
                            </div>
                            <div class="form-group col-sm"></div>
                            <div class="form-group col-sm">
                                <label class="ckbox">
                                    <input type="checkbox" name="extend_term_on_daily_repament_schedule"><span class="tx-13"></span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn ripple" style="background-color: #1E1E2D; color: white;" type="submit">Submit</button>
                    <button class="btn ripple btn-secondary" data-dismiss="modal" type="button">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

