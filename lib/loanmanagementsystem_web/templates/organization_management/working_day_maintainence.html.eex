<script>
$(document).ready(function(){
    $('#updateworkingdaysmodal').on('show.bs.modal', function (event){
        var button = $(event.relatedTarget)
        var id = button.data('id')
        var monday = button.data('monday')
        var tuesday = button.data('tuesday')
        var wednesday = button.data('wednesday')
        var thursday = button.data('thursday')
        var friday = button.data('friday')
        var saturday = button.data('saturday')
        var sunday = button.data('sunday')

        var modal = $(this)
        modal.find('.modal-body #id').val(id);


    if (monday=="Yes") {
        document.getElementById("monday1").checked = true;
    }
    if (monday=="No") {
        document.getElementById("monday2").checked = true;
    }
    if (tuesday=="Yes") {
        document.getElementById("tuesday1").checked = true;
    }
    if (tuesday=="No") {
        document.getElementById("tuesday2").checked = true;
    }
    if (wednesday=="Yes") {
        document.getElementById("wednesday1").checked = true;
    }
    if (wednesday=="No") {
        document.getElementById("wednesday2").checked = true;
    }
    if (thursday=="Yes") {
        document.getElementById("thursday1").checked = true;
    }
    if (thursday=="No") {
        document.getElementById("thursday2").checked = true;
    }
    if (friday=="Yes") {
        document.getElementById("friday1").checked = true;
    }
    if (friday=="No") {
        document.getElementById("friday2").checked = true;
    }
    if (saturday=="Yes") {
        document.getElementById("saturday1").checked = true;
    }
    if (saturday=="No") {
        document.getElementById("saturday2").checked = true;
    }
    if (sunday=="Yes") {
        document.getElementById("sunday1").checked = true;
    }
    if (sunday=="No") {
        document.getElementById("sunday2").checked = true;
        }
        });
    });
</script>


