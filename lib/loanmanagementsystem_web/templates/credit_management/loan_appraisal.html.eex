                                                   <p class="mb-1"><span class="font-weight-bold" id="fullname">Name:  </span></p>
                                                    <p class="mb-0"><span class="font-weight-bold" id="mobile">Mobile Number: </span > </p>
                                                    <p class="mb-0"><span class="font-weight-bold" id="email">Email Address: </span > </p>
                                                </div>
                                                <div class="col-lg-6 text-end">
                                                    <div class="col-sm">
                                                    <label class="form-label">Loan Amount Limit Granted:<span style="color: red;">*</span></label>
                                                        <input class="form-control" name="number"  type="text" placeholder="Add Limit">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="table-responsive mg-t-40">
                                                <table class="table table-invoice table-bordered">
                                                    <thead>
                                                        <tr>

                                                            <th class="wd-15p">Loan Ref#</th>
                                                            <th class="wd-15p">Product Name</th>
                                                            <th class="wd-15p">Date Collected </th>
                                                            <th class="wd-15p">Principle</th>
                                                            <th class="wd-15p">Period </th>
                                                            <th class="wd-15p">Maturity Date</th>
                                                            <th class="wd-15p">Status</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr>
                                                            <td>Ref#1234</td>
                                                            <td class="tx-center" id="product_name">Zipake-Loan</td>
                                                            <td class="tx-center" id="cllecteddate">2022-07-16</td>
                                                            <td class="tx-center" id="principle">K 10,340</td>
                                                            <td class="tx-center" id="period">12 months</td>
                                                            <td class="tx-center" id="expected_maturity_date"></td>
                                                            <td class="tx-center" id="">ACTIVE</td>
                                                        </tr>

                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </form>
								</div>
							</div>
						</div>
						<!-- End Row -->

            <div class="modal-footer">
                <div class="card-footer text-end">
                    <button type="button" class="btn ripple btn-secondary mb-1"><i class="fe fe-send me-1"></i> Update Limit</button>
                    <button type="button" class="btn ripple btn-info mb-1" ><i class="fe fe-printer me-1"></i> Close</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!--End Tooltips and Popovers -->

<!-- loan Filter  -->
<div class="modal" id="loan-listing-filter-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalSizeLg" aria-hidden="true">
   <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
      <div class="modal-content">
         <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Filter Details</h5>
            <button type="button" class="close" data-bs-dismiss="modal"  aria-label="Close"><i aria-hidden="true" class="zmdi zmdi-close"></i></button>
         </div>
         <form >
            <div class="modal-body">
               <input type="hidden" name="_csrf_token" value="<%= Plug.CSRFProtection.get_csrf_token()%>">


               <div class="form-group row">
                  <div class="col-lg-6">
                     <label>First Name:</label>
                     <div class="input-group">
                        <input type="text" name="first_name" id="first_name_filter" class="form-control" autocomplete="off">
                        <div class="input-group-append">
                          
                        </div>
                     </div>
                     <span class="form-text text-muted">Please enter first name</span>
                  </div>
                  <div class="col-lg-6">
                     <label>Last Name:</label>
                     <div class="input-group">
                        <input type="text" name="last_name" id="last_name_filter" class="form-control"  autocomplete="off">
                        <div class="input-group-append">
                          
                        </div>
                     </div>
                     <span class="form-text text-muted">Please enter last name</span>
                  </div>
               </div>
               <div class="form-group row">
                    <div class="col-lg-6">
                        <label>Requested Amount:</label>
                        <div class="input-group">
                            <input type="text" name="requested_amount" id="requested_amount_filter" class="form-control" autocomplete="off">
                            <div class="input-group-append">
                           
                            </div>
                        </div>
                        <span class="form-text text-muted">Please enter Requested amount</span>
                    </div>

                     <div class="col-lg-6">
                     <label>Product Type:</label>
                     <div class="input-group">
                         <select name="loan_type" id="loan_type_filter" required class="form-control select2">
                            <option label="Choose product"></option>
                           <%= for product <- Loanmanagementsystem.Products.Product.all do %>
                             <option  value="<%= product.productType %>"><%= product.productType %> </option>
                            <% end %>
                        </select>
                       
                     </div>

                     
                
                  </div>
                   
               </div>

               <div class="form-group row">
                  <div class="col-lg-6">
                        <label>Loan Number:</label>
                        <div class="input-group">
                            <input type="text" name="id" id="loan_number_filter" class="form-control" autocomplete="off">
                            <div class="input-group-append">
                           
                            </div>
                        </div>
                        <span class="form-text text-muted">Please enter Loan Number</span>
                    </div>

                     <div class="col-lg-6">
                        <label>NRC Number:</label>
                        <div class="input-group">
                            <input type="text" name="nrc" id="nrc_filter" class="form-control" autocomplete="off">
                            <div class="input-group-append">
                           
                            </div>
                        </div>
                        <span class="form-text text-muted">Please enter NRC Number</span>
                    </div>
                 
               </div>


               <div class="form-group row">
                  <div class="col-lg-6">
                     <label>Start Date:</label>
                     <div class="input-group">
                         <input type="date" class="form-control m-input" placeholder="" name="from" id="from">
                         <input type="hidden" name="usertype" id="usertype" value="<%= String.trim(@conn.private.plug_session["current_user_role"].roleType) %>">
                        <input type="hidden" name="create" id="create" value="<%= String.trim(@conn.assigns.user.role.loan.create) %>">
                        <input type="hidden" name="edit" id="edit" value="<%= String.trim(@conn.assigns.user.role.loan.edit) %>">
                        <input type="hidden" name="view" id="view" value="<%= String.trim(@conn.assigns.user.role.loan.view) %>">
                        <input type="hidden" name="change_status" id="change_status" value="<%= String.trim(@conn.assigns.user.role.loan.change_status) %>">

                     </div>
                     <span class="form-text text-muted">Please enter start date</span>
                  </div>
                  <div class="col-lg-6">
                     <label>End Date:</label>
                     <div class="input-group">
                         <input type="date" class="form-control m-input" placeholder="" name="to" id="to">
                         

                     </div>
                     <span class="form-text text-muted">Please enter end date</span>
                  </div>
               </div>
            </div>
            <div class="modal-footer">
                <button class="btn ripple btn-danger" data-bs-dismiss="modal" type="button">Close</button>
                <button type="button" class="btn btn-primary" id="loan_application_listing_filter" style="margin:2px;">filter</button>
            </div>
         </form>
      </div>
   </div>
</div>
<!-- Filter end -->

<!-- Write off loan  Modal  -->
<div class="modal fade" id="loan-writeoff-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content modal-content-demo">
            <div class="modal-header">
                <h6 class="modal-title">Write off Loan</h6>
                <button type="button" class="close" data-bs-dismiss="modal"  aria-label="Close"><i aria-hidden="true" class="zmdi zmdi-close"></i></button>
