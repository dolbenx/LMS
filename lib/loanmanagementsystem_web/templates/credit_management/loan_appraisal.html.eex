<%= render "submenu.html", assigns %>
    <div class="col-md-12">

        <!-- Page Header -->
        <div class="page-header">
            <div>
                <h2 class="main-content-title tx-24 mg-b-5">Loan Appraisals</h2>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Loan Underwriting</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Loan Appraisals</li>
                </ol>
            </div>
            <div class="d-flex">
                <div class="justify-content-center">
                   <button class="btn ripple"  type="button" style="background-color: #003651; color: white;" id="loan-listing-filter"><i class="fe fe-filter me-2"></i>  Filter</button>
                </div>
            </div>
        </div>

        <!-- End Page Header -->

        <!-- Row -->
        <div class="row row-sm">
            <div class="col-lg-12">
                <div class="card custom-card overflow-hidden">

                    <div class="card-body">

                        <div class="table-responsive">
                            <table class="table table-bordered border-bottom" id="dt-loan-application">
                                <input type="hidden" name="_csrf_token" id="csrf" value="<%= Plug.CSRFProtection.get_csrf_token()%>">
                               
                                <thead>
                                    <tr>
                                        <th class="wd-20p">Loan Number</th>
                                        <th class="wd-20p">Customer Name</th>
                                        <th class="wd-20p">Product Name</th>
                                        <th class="wd-15p">Date Collected </th>
                                        <th class="wd-15p">Requested Amount </th>
                                        <th class="wd-25p">Status</th>
                                        <th class="wd-15p">Action</th>
                                    </tr>
                                </thead>
                                

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Row -->

    </div>

<!-- Tooltips and Popovers -->
<div class="modal fade" id="modaldemo12">
