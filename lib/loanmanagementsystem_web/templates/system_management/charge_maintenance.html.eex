
<div id="kt_header" class="header header-fixed">
    <!--begin::Container-->
    <div class="container-fluid d-flex align-items-stretch justify-content-between">
        <!--begin::Header Menu Wrapper-->
            <%= render LoanmanagementsystemWeb.OrganizationManagementView, "submenu.html", assigns %>
        <!--end::Header Menu Wrapper-->
    </div>
    <!--end::Container-->
</div>
<!--end::Header-->
<%= render LoanmanagementsystemWeb.UserView, "aleart.html", assigns %>
<!--begin::Content-->
<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Subheader-->
    <div class="subheader py-2 py-lg-4 subheader-solid" id="kt_subheader">
        <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <!--begin::Info-->
            <div class="d-flex align-items-center flex-wrap mr-2">
                <!--begin::Page Title-->
                <h5 class="text-dark font-weight-bold mt-2 mb-2 mr-5">Charges</h5>
                <!--end::Page Title-->
                <!--begin::Actions-->
                <div class="subheader-separator subheader-separator-ver mt-2 mb-2 mr-4 bg-gray-200"></div>
                <!--end::Actions-->
            </div>
            <!--end::Info-->
            <!--begin::Toolbar-->
            <div class="d-flex align-items-center">
                <!--begin::Daterange-->
                TIME
            </div>
            <!--end::Toolbar-->
        </div>
    </div>
    <!--end::Subheader-->
    <!--begin::Entry-->
    <div class="d-flex flex-column-fluid">
        <!--begin::Container-->
        <div class="container-fluid">
            <!--begin::Dashboard-->
            <!--begin::Row-->
            <div class="row">
                <div class="col-md-12 col-xxl-12">
                    <div class="card card-custom card-stretch gutter-b">
                        <div class="card-header flex-wrap border-0 pt-6 pb-0">
                            <div class="card-title">
                                <h3 class="card-label">Charges List
                                <span class="text-muted pt-2 font-size-sm d-block">List of charges</span></h3>
                            </div>
                            <div class="card-toolbar">
                                <button type="button" class="btn ripple text-white font-weight-bolder" data-toggle="modal" data-target="#modaldemo12" style="background-color: #011941;">
                                    Add Charge
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered table-hover table-striped w-100" id="kt_datatable">
                            <input type="hidden" name="_csrf_token" id="csrf" value="<%= Plug.CSRFProtection.get_csrf_token()%>">
                                <thead>
                                    <tr>
                                        <th>Charge Name</th>
                                        <th>Charge Currency</th>
                                        <th>Charge Type</th>
                                        <th>Charge Amount</th>
                                        <th>Charge When</th>
                                        <th class="text-center">Action</th>
                                    </tr>
                                </thead>
                                <%= for charge <- @charges do %>
                                    <tr>
                                        <td>
                                            <%= charge.chargeName %>
                                        </td>
                                        <td>
                                            <%= charge.currency %>
                                        </td>
                                        <td>
                                            <%= charge.chargeType %>
                                        </td>
                                        <td>
                                            <%= charge.chargeAmount %>
                                        </td>
                                        <td>
                                            <%= charge.chargeWhen %>
                                        </td>

                                        <td>

                                            <div class="dropdown">
                                                <button class="dropbtn">Options</button>
                                                <div class="dropdown-content">

                                                    <a class="btn ripple btn-sm" href="#"
                                                        data-target="#edit_charge"
                                                        data-toggle="modal"
                                                        data-id ="<%= charge.id %>"
                                                        data-charge_name ="<%= charge.chargeName%>"
                                                        data-is_penalty ="<%= charge.isPenalty%>"
                                                        data-charge_when ="<%= charge.chargeWhen%>"
                                                        data-account_to_credit ="<%= charge.accountToCredit%>"
                                                        data-charge_type ="<%= charge.chargeType%>"
                                                        data-charge_currency ="<%= charge.currency%>"
                                                        data-charge_amount ="<%= charge.chargeAmount%>"
                                                        data-effective_date ="<%= charge.effectiveDate%>"
                                                    >Edit</a>

                                                    <a class="btn ripple btn-sm" href="#"
                                                        data-target="#view_charge"
                                                        data-toggle="modal"
                                                        data-id_view ="<%= charge.id %>"
                                                        data-charge_name_view ="<%= charge.chargeName%>"
                                                        data-is_penalty_view ="<%= charge.isPenalty%>"
                                                        data-charge_when_view ="<%= charge.chargeWhen%>"
                                                        data-account_to_credit_view ="<%= charge.accountToCredit%>"
                                                        data-charge_type_view ="<%= charge.chargeType%>"
                                                        data-charge_currency_view ="<%= charge.currency%>"
                                                        data-charge_amount_view ="<%= charge.chargeAmount%>"
                                                        data-effective_date_view ="<%= charge.effectiveDate%>"
                                                    >View</a>
                                                </div>
                                            </div>

                                        </td>

                                    </tr>
                                <% end %>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!--end::Row-->
        </div>
        <!--end::Container-->
    </div>
    <!--end::Entry-->
</div>


    <!-- Tooltips and Popovers -->

<div class="modal" id="modaldemo12">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content modal-content-demo">
            <div class="modal-header">
                <h6 class="modal-title">Add Charge</h6>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><i aria-hidden="true" class="ki ki-close"></i></button>
            </div>
            <form action="<%= Routes.system_management_path(@conn, :add_charge) %>" method="post">
            <input type="hidden" name="_csrf_token" id="csrf" value="<%= Plug.CSRFProtection.get_csrf_token()%>">
                <div class="modal-body">
                        <div class="row row-sm">
                            <div class="col-md-12 col-lg-12 col-xl-12">
                                <h5 class="modal-title"> Charge Details </h5><br>
                                <div class="row row-sm mg-b-20">
                                    <div class="col-lg">
                                        <p class="mg-b-10">Charge Name</p>
                                        <input name="chargeName" class="form-control" type="text">
                                    </div>
                                    <div class="col-lg">
                                        <p class="mg-b-10">Is Penalty</p>
                                        <select name="isPenalty" class="form-control">
                                            <option label="Choose One"></option>
                                            <option value="1">yes</option>
                                            <option value="1">No</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row row-sm mg-b-20">
                                    <div class="col-lg">
                                        <p class="mg-b-10">Charge When</p>
                                        <select name="chargeWhen" class="form-control">
                                            <option label="Choose One"></option>
                                            <option value="AT DEPOSIT">AT DEPOSIT</option>
                                            <option value="AT DISBURSEMENT">AT DISBURSEMENT</option>
                                            <option value="AT MATURITY">AT MATURITY</option>
                                        </select>
                                    </div>
                                    <div class="col-lg">
                                        <p class="mg-b-10">Account To Credit</p>
                                        <input name="accountToCredit" class="form-control" type="text" readonly>
                                    </div>
                                </div>
                                <div class="row row-sm mg-b-20">
                                    <div class="col-lg">
                                        <p class="mg-b-10">Charge Type</p>
                                        <select name="chargeType" class="form-control">
                                            <option label="Choose One"></option>
                                            <option value="ACTUAL AMOUNT">ACTUAL AMOUNT</option>
                                            <option value="PERCENTAGE">PERCENTAGE</option>
                                        </select>
                                    </div>
                                    <div class="col-lg">
                                        <p class="mg-b-10">Select Currency</p>
                                        <select name="currency" class="form-control">
                                            <option label="Choose One"></option>
                                            <%= for currency <- @currencies do %>
                                                <option value="<%= currency.id %>|||<%= currency.isoCode %>"><%= currency.name %></option>
                                            <% end %>
                                        </select>
                                    </div>
                                </div>
                                <div class="row row-sm mg-b-20">
                                    <div class="col-lg">
                                        <p class="mg-b-10">Charge Amount</p>
                                        <input class="form-control" name="chargeAmount" type="text">
                                    </div>
                                    <div class="col-lg-6">
                                        <p class="mg-b-10">effective Date</p>
                                        <input name="effectiveDate" class="form-control" type="date">
                                    </div>
                                </div>
                            </div>
                        </div>
                </div>
                <div class="modal-footer">
                    <button class="btn ripple" style="background-color: #1E1E2D; color: white;" type="submit">Submit</button>
                    <button class="btn ripple btn-danger" data-dismiss="modal" type="button">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

