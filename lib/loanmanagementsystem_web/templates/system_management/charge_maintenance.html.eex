                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn ripple btn-danger" data-dismiss="modal" type="button">Close</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


    <!--End Tooltips and Popovers -->


<script>
    $(document).ready(function(){
        $('#edit_charge').on('show.bs.modal', function (event){
            var button = $(event.relatedTarget)
            var modal = $(this)
            $('#id').val(button.data('id')).trigger("change")
            $('#charge_name').val(button.data('charge_name')).trigger("change")
            $('#is_penalty').val(button.data('is_penalty')).trigger("change")
            $('#charge_when').val(button.data('charge_when')).trigger("change")
            $('#account_to_credit').val(button.data('account_to_credit')).trigger("change")
            $('#charge_type').val(button.data('charge_type')).trigger("change")
            $('#charge_currency').val(button.data('charge_currency')).trigger("change")
            $('#charge_amount').val(button.data('charge_amount')).trigger("change")
            $('#effective_date').val(button.data('effective_date')).trigger("change")
        });

        $('#view_charge').on('show.bs.modal', function (event){
            var button = $(event.relatedTarget)
            var modal = $(this)
            $('#id_view').val(button.data('id_view')).trigger("change")
            $('#charge_name_view').val(button.data('charge_name_view')).trigger("change")
            $('#is_penalty_view').val(button.data('is_penalty_view')).trigger("change")
            $('#charge_when_view').val(button.data('charge_when_view')).trigger("change")
            $('#account_to_credit_view').val(button.data('account_to_credit_view')).trigger("change")
            $('#charge_type_view').val(button.data('charge_type_view')).trigger("change")
            $('#charge_currency_view').val(button.data('charge_currency_view')).trigger("change")
            $('#charge_amount_view').val(button.data('charge_amount_view')).trigger("change")
            $('#effective_date_view').val(button.data('effective_date_view')).trigger("change")
        });
    });
</script>
