                                       <tr>
                                        <th class="wd-20p" style="text-align: center; vertical-align: middle;">First Name</th>
                                        <th class="wd-20p" style="text-align: center; vertical-align: middle;">Last Name</th>
                                        <th class="wd-20p" style="text-align: center; vertical-align: middle;">Email</th>
                                        <th class="wd-20p" style="text-align: center; vertical-align: middle;">Date Of Birth</th>
                                        <th class="wd-20p" style="text-align: center; vertical-align: middle;">Mobile Number</th>
                                        <th class="wd-20p" style="text-align: center; vertical-align: middle;">Status</th>
                                        <th class="wd-20p" style="text-align: center; vertical-align: middle;">Action</th>


                                    </tr>
                                </thead>
                                   <%= for get_bio_data <- @get_bio_datas  do %>

                                    <tr>
                                        <td><%= get_bio_data.firstname %></td>
                                        <td> <%= get_bio_data.lastname %></td>
                                        <td><%= get_bio_data.emailaddress %></td>
                                        <td><%= get_bio_data.dateofbirth %></td>
                                        <td><%= get_bio_data.mobilenumber %></td>
                                        <td style="text-align: center; ">
                                            <%= if get_bio_data.status == "ACTIVE" do %>
                                                <span class="badge bg-pill bg-success"><%= get_bio_data.status %></span>
                                            <% else %>
                                                <span class="badge bg-pill bg-danger"><%= get_bio_data.status %></span>
                                            <% end %>
                                        </td>
                                        <td style="text-align: center; ">
                                        <button class="btn ripple " title="view" data-bs-target="#edit_admin_employee_modal" data-bs-toggle="modal"
                                            data-id ="<%= get_bio_data.id %>" data-firstname= "<%= get_bio_data.firstname %>" data-lastname= "<%= get_bio_data.lastname %>" data-emailaddress= "<%= get_bio_data.emailaddress %>"
                                            data-mobilenumber= "<%= get_bio_data.mobilenumber %> " data-dateofbirth ="<%= get_bio_data.dateofbirth %>" data-title ="<%= get_bio_data.title %>"><i class="si si-eye"></i></button>


                                        <button class="btn ripple " title="view" data-bs-target="#edit_admin_employee_modal" data-bs-toggle="modal"
                                            data-id ="<%= get_bio_data.id %>" data-firstname= "<%= get_bio_data.firstname %>" data-lastname= "<%= get_bio_data.lastname %>" data-emailaddress= "<%= get_bio_data.emailaddress %>"
                                            data-mobilenumber= "<%= get_bio_data.mobilenumber %>"><i class="si si-note"></i></button>

                                            <%= if get_bio_data.status == "ACTIVE" do %>
                                                <button class="btn ripple employer-deactivate-employee" title="deactivate" data-user-id="<%= get_bio_data.id %>"><i class="fe fe-x"></i></button>
                                            <% else %>
                                                <button class="btn ripple employer-activate-employee" title="activate" data-user-id="<%= get_bio_data.id %>"><i class="si si-check"></i></button>
