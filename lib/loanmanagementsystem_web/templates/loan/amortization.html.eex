                                </div>
                            </div>
                             <%# -----------------------> %>

                             <h1>Loan Amortization Table</h1>

                              <div class="row">
                                        <div class="col-md-12 border"><br>
                                        
                                            <div class="row row-xs align-items-center mg-b-20">
