<script>
  function addrow(e) {
    var $tr = $(e).closest('.tr_clone');
    var $clone = $tr.clone();

    // Find the input field for the "Vendor" column in both the original row and the cloned row
    var vendorInputOriginal = $tr.find('input[name="vendorName"]');
    var vendorInputCloned = $clone.find('input[name="vendorName"]');

    // Set the value of the "Vendor" input field in the cloned row to the same value as the original row
    vendorInputCloned.val(vendorInputOriginal.val());

    $tr.after($clone);
  }

  function removerow(e)
    {
        var tag = document.getElementsByClassName('tr_clone');

      if (tag.length <= 1) {
        // If there is only one row remaining, don't remove it
        return;
      } else {
        var $tr = $(e).closest('.tr_clone');
        var $remove = $tr.remove();
        $remove.find(':text').val('');
        $tr.after($remove);
      }
    }
</script>
