        $clone.find(':text').val('');
        $tr.after($clone);
    }

    function removerow(e)
    {
        var tag = document.getElementsByClassName('tr_clone')

        if (tag.length <= 1){
            return tag
        } else {

        var $tr = $(e).closest('.tr_clone');
        var $remove = $tr.remove();
        $remove.find(':text').val('');
        $tr.after($remove);
        }
    }

</script>

<script>

$(document).ready(function() {

function calculateMonthlyInstallment(loanAmount, interestRate, loanTermMonths) {
    const monthlyInterestRate = interestRate / 1200; // divide annual interest rate by 1200 to get monthly interest rate
    const numberOfPayments = loanTermMonths; // total number of payments is now the loan term in months
    const numerator = monthlyInterestRate * Math.pow(1 + monthlyInterestRate, numberOfPayments);
    const denominator = Math.pow(1 + monthlyInterestRate, numberOfPayments) - 1;
    const monthlyInstallment = loanAmount * (numerator / denominator);

    return monthlyInstallment.toFixed(2); // round to 2 decimal places
  }

