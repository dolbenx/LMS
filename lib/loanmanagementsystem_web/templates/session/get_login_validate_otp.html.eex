<html lang="en"><head>

		<meta charset="utf-8">
		<meta content="width=device-width, initial-scale=1, shrink-to-fit=no" name="viewport">
		<meta name="description" content="Spruha -  Admin Panel HTML Dashboard Template">
		<meta name="author" content="Spruko Technologies Private Limited">
		<meta name="keywords" content="admin,dashboard,panel,bootstrap admin template,bootstrap dashboard,dashboard,themeforest admin dashboard,themeforest admin,themeforest dashboard,themeforest admin panel,themeforest admin template,themeforest admin dashboard,cool admin,it dashboard,admin design,dash templates,saas dashboard,dmin ui design">

		<!-- Favicon -->
        <link rel="icon" href="<%= Routes.static_path(@conn, "/images/gnc.jpg") %>" type="image/x-icon"/>

		<!-- Title -->
		<title>GNC | Forgot Password</title>

		<!-- Bootstrap css-->
	    <link  id="style" rel="stylesheet" href="<%= Routes.static_path(@conn, "/webstatic/plugins/bootstrap/css/bootstrap.min.css") %>">

		<!-- Icons css-->
	    <link  id="style" rel="stylesheet" href="<%= Routes.static_path(@conn, "/webstatic/plugins/web-fonts/icons.css") %>">
	    <link  id="style" rel="stylesheet" href="<%= Routes.static_path(@conn, "/webstatic/plugins/web-fonts/font-awesome/font-awesome.min.css") %>">
	    <link  id="style" rel="stylesheet" href="<%= Routes.static_path(@conn, "/webstatic/plugins/web-fonts/plugin.css") %>">

		<!-- Style css-->
	    <link  id="style" rel="stylesheet" href="<%= Routes.static_path(@conn, "/webstatic/css/style.css") %>">
	    <link  id="style" rel="stylesheet" href="<%= Routes.static_path(@conn, "/webstatic/css/boxed.css") %>">
	    <link  id="style" rel="stylesheet" href="<%= Routes.static_path(@conn, "/webstatic/css/dark-boxed.css") %>">
	    <link  id="style" rel="stylesheet" href="<%= Routes.static_path(@conn, "/webstatic/css/skins.css") %>">
	    <link  id="style" rel="stylesheet" href="<%= Routes.static_path(@conn, "/webstatic/css/dark-style.css") %>">
	    <link  id="style" rel="stylesheet" href="<%= Routes.static_path(@conn, "/webstatic/css/colors/default.css") %>">

		<!-- Color css-->
	    <link  id="style" rel="stylesheet" href="<%= Routes.static_path(@conn, "/webstatic/css/colors/color.css") %>">

	</head>

	<body class="main-body leftmenu">
        <!-- Loader -->
		<div id="global-loader" style="display: none;">
			<img src="../../assets/img/loader.svg" class="loader-img" alt="Loader">
		</div>
		<!-- End Loader -->

		<!-- Page -->
		<div class="page main-signin-wrapper">

			<!-- Row -->
			<div class="row signpages text-center">
                <!-- To Handle Flashes -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <%= if get_flash(@conn, :info) do %>
                                    <div class="alert alert-success alert-styled-left">
                                    <button type="button" class="close" data-dismiss="alert">&times; <span class="sr-only">Close</span></button>
                                    <%= get_flash(@conn, :info) %>
                                    </div>
                                <% end %>
                                <%= if get_flash(@conn, :error) do %>
                                    <div class="alert alert-danger alert-styled-left">
                                    <button type="button" class="close" data-dismiss="alert">&times; <span class="sr-only">Close</span></button>
                                    Sorry! <%= get_flash(@conn, :error) %>
                                    </div>
                                <% end %>
                            </div>
                        </div>
                    </div>
                <!-- End flahses -->
				<div class="col-md-12">
					<div class="card">
						<div class="row row-sm">
							<div class="col-lg-6 col-xl-5 d-none d-lg-block text-center" style="background-color: #0E75BF;">
								<div class="mt-3 pt-3 p-2 pos-absolute">
									<img src="<%= Routes.static_path(@conn, "/images/probaselogo.png") %>" class="header-brand-img mb-4" alt="logo" width="140" height="70">
									<div class="clearfix"></div>
									<img src="<%= Routes.static_path(@conn, "/images/forgot.png") %>" class="ht-100 mb-0" alt="user">
									<h5 class="mt-4 text-white">Reset Your Password?</h5>
									<span class="tx-white-6 tx-13 mb-5 mt-xl-0">An OTP has been sent to your email and mobile number.</span>
								</div>
							</div>
							<div class="col-lg-6 col-xl-7 col-xs-12 col-sm-12 login_form ">
								<div class="container-fluid">
									<div class="row row-sm">
										<div class="card-body mt-2 mb-2">
											<img src="<%= Routes.static_path(@conn, "/images/gnc-new.png") %>" class=" d-lg-none header-brand-img text-start float-start mb-4" alt="logo">
											<div class="clearfix"></div>
											<h5 class="text-start mb-2">Enter Your OTP.</h5>
											<p class="mb-4 text-muted tx-13 ms-0 text-start">We have sent an 4 digit OTP to your email and mobile number please provide the OTP. </p>
											<form id="js-login" novalidate="" action="<%= Routes.session_path(@conn, :validate_otp)%>" method="POST">
                                                <input type="hidden" name="_csrf_token" value="<%= Plug.CSRFProtection.get_csrf_token()%>">
                                                <input class="form-control" name="username" type="hidden" value="<%= @username %>">
                                                <div class="form-group">
                                                    <label style="padding-bottom: 10px !important">Username: <%= @username%></label>

                                              <div class="form-group">
                                                <label>One-Time Password:</label>

                                                <div class="col col-md-12 col-sm-12 col-xs-12 col-lg-12">
                                                    <div class="col col-md-3 col-sm-3 col-xs-3 col-lg-3" style="float: left !important">
                                                        <input class="m-2 form-control rounded" name="otp1" id="otp1" type="text">
                                                    </div>
                                                    <div class="col col-md-3 col-sm-3 col-xs-3 col-lg-3" style="float: left !important">
                                                        <input class="m-2 form-control rounded" name="otp2" id="otp2" type="text">
                                                    </div>
                                                    <div class="col col-md-3 col-sm-3 col-xs-3 col-lg-3" style="float: left !important">
                                                        <input class="m-2 form-control rounded" name="otp3" id="otp3" type="text">
                                                    </div>
                                                    <div class="col col-md-3 col-sm-3 col-xs-3 col-lg-3" style="float: left !important">
                                                        <input class="m-2 form-control rounded" name="otp4" id="otp4" type="text">
                                                    </div>
                                                </div>

                                                <div class="help-block" style="clear:both !important; text-align: center !important">
                                                    Enter One-Time Password Sent To Your Phone
                                                </div>
                                              </div>
                                              <div class="buttons-w">
                                                <button type="submit" class="btn btn float-right" style="background-color: #C8102E; color: white;">Validate OTP</button>
                                              </div>
                                            </form>
											<div class="card-footer border-top-0 ps-0 mt-3 text-start ">
												<p>Have you remembered your password? <a href="/" class="btn-sm" style="color: #F6000F;">BACK TO LOGIN >></a></p>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!-- End Row -->

		</div>


	<script src="<%= Routes.static_path(@conn, "/webstatic/plugins/jquery/jquery.min.js") %>"></script>

    <script>
        jQuery('#otp1').keyup(function () {
            var inputVal = $(this).val();
            //var characterReg = /^[0-9]{5}$/;
            console.log(inputVal);
            if (inputVal.length>0) {
                document.getElementById("otp2").focus();
            }
        });
        jQuery('#otp2').keyup(function () {
            var inputVal = $(this).val();
            //var characterReg = /^[0-9]{5}$/;
            console.log(inputVal);
            if (inputVal.length>0) {
                document.getElementById("otp3").focus();
            }
        });
        jQuery('#otp3').keyup(function () {
            var inputVal = $(this).val();
            //var characterReg = /^[0-9]{5}$/;
            console.log(inputVal);
            if (inputVal.length>0) {
                document.getElementById("otp4").focus();
            }
        });
        jQuery('#otp4').keyup(function () {
            var inputVal = $(this).val();
            //var characterReg = /^[0-9]{5}$/;
            console.log(inputVal);
            if (inputVal.length>0) {
                $('form#login').submit();
            }
        });
    </script>
    </body>
</html>
