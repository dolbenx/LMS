<script>
$(document).ready(function(){
    $('#view_employer').on('show.bs.modal', function (event){
            var button = $(event.relatedTarget)
            var id = button.data('id')
            var firstname = button.data('firstname')
            var username = button.data('username')
            var title = button.data('title')
            var status = button.data('status')
            var lastname = button.data('lastname')
            var mobilenumber = button.data('mobilenumber')
            var othername = button.data('othername')
            var gender = button.data('gender')
            var emailAddress = button.data('emailAddress')
            var identificationnumber = button.data('identificationnumber')
            var auth_level = button.data("auth_level");
            var permissions = button.data("permissions")
            var array = permissions.split("~")


            var modal = $(this)
            modal.find('.modal-body #id').val(id);
            modal.find('.modal-body #view_auth_level').val(auth_level);
            modal.find('.modal-body #firstname').val(firstname);
            modal.find('.modal-body #username').val(username);
            modal.find('.modal-body #title').val(title);
            modal.find('.modal-body #status').val(status);
            modal.find('.modal-body #lastname').val(lastname);
            modal.find('.modal-body #mobilenumber').val(mobilenumber);
            modal.find('.modal-body #othername').val(othername);
            modal.find('.modal-body #gender').val(gender);
            modal.find('.modal-body #emailAddress').val(emailAddress);
            modal.find('.modal-body #identificationnumber').val(identificationnumber);


            if (array.includes("super_admin") == true){
                $('#dev_super_admin').html('<input type="checkbox" checked value="super_admin">' + ' super admin' );
            }else{
