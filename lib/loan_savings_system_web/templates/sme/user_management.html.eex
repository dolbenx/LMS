<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>
    $('#Update_user').on('click', function(){ 
        $('#edit_user_user').hide();
        $.ajax({
            url: "/Update/user",
            headers: {'X-CSRF-TOKEN': jQuery('meta[name="csrf-token"]').attr('content')},
            type: "POST",
            data: {
                firstName: $('#efirst_name').val(),
                lastName: $('#elast_name').val(),
                otherName: $('#eother_name').val(), 
                emailAddress: $('#eemail').val(),
                mobileNumber: $('#ephone').val(), 
                gender: $('#egender').val(), 
                title: $('#etitle').val(),
                meansOfIdentificationType: $('#eidtype').val(),
                meansOfIdentificationNumber: $('#eidno').val(),
                dateOfBirth: $('#edob').val(),
                userId: $('#user_id').val(),
            },      
            success: function (resp) {
                if (resp.status == "SUCCESS"){
                    alert("successfully updated user details");
                    location.reload();
                }else{
                    alert("failed to update user datails");
                }
            }
        });
    });   
</script>

<script>   
    $(document).on('click', '#edit_user', function(event) {
        $('#efirst_name').val( $(this).data("first_nam") ) 
        $('#elast_name').val( $(this).data("last_nam")) 
        $('#eother_name').val( $(this).data("other_name") ) 
        $('#eemail').val( $(this).data("email") ) 
        $('#ephone').val( $(this).data("phone") ) 
        $('#eidno').val( $(this).data("idno") )
        $('#edob').val( $(this).data("dob") ) 
        $('#user_id').val( $(this).data("id"))
        $('#physical_address').val($(this).data("physical_address"))
        $('#authlevel').val($(this).data("auth_level"));

        var permissions = $(this).data("permissions")
        var array = permissions.split("~") 
       //['super_admin', 'deactivator', 'approver', 'creator']
        if (array.includes("super_admin") == true){
            $('#div_super_admin').html('<input type="checkbox" id="super_admin" checked name="permissions[]" value="super_admin">' + ' super admin' );
        }else{
            $('#div_super_admin').html('<input type="checkbox" id="super_admin" name="permissions[]" value="super_admin">' + ' super admin' );
        }

        if (array.includes("deactivator") == true){
            $('#div_deactivator').html('<input type="checkbox" id="deactivator" name="permissions[]" checked  value="deactivator">' + ' deactivator' );
        }else{
            $('#div_deactivator').html('<input type="checkbox" id="deactivator" name="permissions[]" value="deactivator">' + ' deactivator' );
        }

        if (array.includes("approver") == true){
            $('#div_approver').html('<input type="checkbox" id="approver" name="permissions[]" checked  value="approver">' + ' approver' );
        }else{ 
            $('#div_approver').html('<input type="checkbox" id="approver" name="permissions[]"  value="approver">' + ' approver' );
        }

        if (array.includes("creator") == true){
            $('#div_creator').html('<input type="checkbox" id="creator" name="permissions[]" checked  value="creator">' + ' creator' );
        }else{
            $('#div_creator').html('<input type="checkbox" id="creator" name="permissions[]"  value="creator">' + ' creator' );
        }


        // ============ title ============================
        var title = $(this).data("title")
        if (title == "Mr"){
            $('#etitle').html('<option selected value="Mr">Mr.</option>' + '<br/>' + '<option value="Mrs">Mrs.</option>' + "<br/>" + '<option value="Ms"> Ms</option>')
        }
        if (title == "Mrs"){
            $('#etitle').html('<option value="Mr">Mr.</option>' + '<br/>' + '<option selected value="Mrs">Mrs.</option>' + "<br/>" + '<option value="Ms"> Ms</option>')
        }
        if (title == "Ms"){
            $('#etitle').html('<option value="Mr">Mr.</option>' + '<br/>' + '<option value="Mrs">Mrs.</option>' + "<br/>" + '<option selected value="Ms"> Ms</option>')
        }
        // ============ idtype ============================
        var idtype = $(this).data("idtype")
        if (idtype == "NRC"){
            $('#eidtype').html('<option selected value="NRC">NRC.</option>' + '<br/>' + '<option value="DriversLicense">Drivers License.</option>' + "<br/>" + '<option value="Passport"> Passport</option>')
        }
        if (idtype == "DriversLicense"){
            $('#eidtype').html('<option selected value="NRC">NRC.</option>' + '<br/>' + '<option value="DriversLicense">Drivers License.</option>' + "<br/>" + '<option value="Passport"> Passport</option>')
        }
        if (idtype == "Passport"){
            $('#eidtype').html('<option selected value="NRC">NRC.</option>' + '<br/>' + '<option value="DriversLicense">Drivers License.</option>' + "<br/>" + '<option value="Passport"> Passport</option>')
        }

        // ============ idtype ============================
        var gender = $(this).data("gender")
        if (gender == "MALE"){
            $('#egender').html('<option selected value="MALE">Male.</option>' + '<br/>' + '<option value="FEMALE">Female.</option>')
        }
        if (gender == "FEMALE"){
            $('#egender').html('<option value="MALE">Male.</option>' + '<br/>' + '<option selected value="FEMALE">Female.</option>')
        }
    }); 
</script>



