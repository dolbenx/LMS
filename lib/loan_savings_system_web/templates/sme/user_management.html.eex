  <ol class="breadcrumb page-breadcrumb">
      <li class="breadcrumb-item">
          <i class="subheader-icon fal fa-chart-area"></i> Loans
      </li>
      <li class="position-absolute pos-top pos-right d-none d-sm-block"><span class="js-get-date"></span></li>
  </ol>

  <div class="subheader">
    <h1 class="subheader-title">
        <i class="subheader-icon fal fa-window"></i>
        Profile Users        
    </h1>

    <div class="element-box-content">  
            <button class="btn btn btn-sm waves-effect waves-themed" style="background-color: #011941; color: red;" type="button" data-target="#employer_employee" data-toggle="modal"> Add User</button>
    </div>

  </div>

  <div class="row">
    <div class="col-xl-12">
      <div id="panel-1" class="panel">
        <div class="panel-container show">
            <div class="panel-container show">
              <div class="panel-content">
                <table id="dt-basic-example" class="table table-bordered table-hover table-striped w-100">
                  <input type="hidden" id="csrf" name="_csrf_token" value="<%= Plug.CSRFProtection.get_csrf_token()%>">
                  <thead class="p-3 bg-success-900 rounded overflow-hidden position-relative text-white mb-g">
                    <tr>
                      <th>First Name</th>
                      <th>Other Name</th>
                      <th>Last Name</th>
                      <th>Username</th>
                      <th>ID Type</th>
                      <th>ID Number</th>
                      <th>Cell Number</th>
                      <th>Email</th>
                      <th>Status</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <%= for user <- @user do %>
                        <tr>
                          <td><%= user.firstName %></td>
                          <td><%= user.otherName %></td>
                          <td><%= user.lastName %></td>                            
                          <td><%= user.username %></td>
                          <td><%= user.meansOfIdentificationType %></td>
                          <td><%= user.meansOfIdentificationNumber %></td>
                          <td><%= user.mobileNumber %></td>
                          <td><%= user.emailAddress %></td>
                          <%= case user.status do %>
                            <%= "ACTIVE" -> %>
                              <td><span class="badge badge-success badge-pill"><%= user.status %></span> </td>
                            <%= "DISABLED" -> %>
                              <td><span class="badge badge-danger badge-pill"><%= user.status %></span> </td>
                            <%= "PENDING" -> %>  
                                <td><span class="badge badge-warning badge-pill" style="color: white"><%= user.status %></span> </td>
                            <% end %>
                            <td>
                                <div class="input-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class='subheader-icon fal fa-chevron-down'></i> </span>
                                            <div class="dropdown-menu">
                                                    <a type="button" class="dropdown-item" href="#" data-idtype="<%= user.meansOfIdentificationType %>" data-title="<%= user.title %>" data-gender="<%= user.gender %>" data-id="<%= user.userId %>" data-dob="<%= user.dateOfBirth %>" data-idno="<%= user.meansOfIdentificationNumber %>" data-phone="<%= user.mobileNumber %>" data-email="<%= user.emailAddress %>" data-other_name="<%= user.otherName %>" data-last_nam="<%= user.lastName %>" data-first_nam="<%= user.firstName %>" data-toggle="modal" data-target="#edit_user_user" id="edit_user"><i class="fal fa-edit"></i>Edit User</a>
                                                <%= if user.status != "ACTIVE" || user.status == "PENDING" do %>
                                                        <a class="dropdown-item js-sweetalert2-activate_sys_user" href="<%= Routes.sme_path(@conn, :activate_user, user.id) %>" style="color: #008000" ><i class="fal fa-check"></i> Activate</a>     
                                                <% else %>                  
                                                        <a class="dropdown-item js-sweetalert2-disable_user" href="<%= Routes.sme_path(@conn, :disable_user, user.id) %>" style="color: #ff0000" data-id="#"><i class="fal fa-times"></i> Disable User</a>
                                                <% end %>                                             
                                               
                                            </div>   
                                        </div>
                                    </div>
                                </div>
                          </td>
                        </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>

